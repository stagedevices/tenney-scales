{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tenney Pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "slug",
    "title",
    "description",
    "author",
    "license",
    "tags",
    "defaults",
    "inputs",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "authorUrl": {
      "type": "string",
      "format": "uri"
    },
    "license": {
      "type": "string",
      "const": "CC0-1.0"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rootHz", "primeLimit"],
      "properties": {
        "rootHz": {
          "type": "number"
        },
        "primeLimit": {
          "type": "integer",
          "minimum": 2
        }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["scala"],
      "properties": {
        "scala": {
          "type": "string"
        },
        "kbm": {
          "type": "string"
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}
